{
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "sourceMap": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "removeComments": true,
        "outDir": "build/",
        "noEmitOnError": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
